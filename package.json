{
  "name": "code-reviewer",
  "displayName": "Code Reviewer",
  "description": "A minimal VS Code chat participant that asks Copilot to review the latest Git commit using MCP.",
  "version": "0.0.1",
  "publisher": "codereviewer",
  "enabledApiProposals": [
    "chatParticipantAdditions"
  ],
  "engines": {
    "vscode": "^1.90.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onChatParticipant:CodeReview"
  ],
  "main": "dist/extension.js",
  "contributes": {
    "chatParticipants": [
      {
        "id": "CodeReview",
        "name": "CodeReview",
        "fullName": "Code Review",
        "description": "AI 代码审查助手"
      }
    ]
  },
  "scripts": {
    "compile": "tsc -p ./tsconfig.json",
    "watch": "tsc -w -p ./tsconfig.json",
    "package": "vsce package"
  },
  "devDependencies": {
    "@types/node": "^24.10.1",
    "@types/vscode": "^1.90.0",
    "typescript": "^5.4.0",
    "vsce": "^2.15.0"
  }
}
