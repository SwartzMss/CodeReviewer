{
  "name": "swartz-code-review",
  "displayName": "Swartz Code Review",
  "description": "A customizable VS Code chat participant that lists diff files, honors per-user checklists, and asks Copilot to review the latest Git commit using MCP.",
  "version": "0.0.1",
  "publisher": "codereviewer",
  "enabledApiProposals": [
    "chatParticipantAdditions"
  ],
  "engines": {
    "vscode": "^1.90.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onChatParticipant:SwartzCodeReview"
  ],
  "main": "dist/extension.js",
  "contributes": {
    "chatParticipants": [
      {
        "id": "SwartzCodeReview",
        "name": "SwartzCodeReview",
        "fullName": "Swartz Code Review",
        "description": "AI 代码审查助手",
        "commands": [
          {
            "name": "review",
            "description": "审查最新的 Git 提交"
          }
        ]
      }
    ],
    "configuration": {
      "title": "Swartz Code Review",
      "properties": {
        "swartzCodeReview.checklistFiles": {
          "type": "array",
          "markdownDescription": "要附加到审查提示中的检查清单文件路径列表，支持相对工作区或绝对路径，建议使用 Markdown。",
          "items": {
            "type": "string"
          },
          "default": []
        },
        "swartzCodeReview.excludePaths": {
          "type": "array",
          "markdownDescription": "需要从 git diff 中排除的文件或目录路径列表，支持相对工作区或绝对路径；目录会匹配其下的所有文件。",
          "items": {
            "type": "string"
          },
          "default": []
        }
      }
    }
  },
  "scripts": {
    "compile": "tsc -p ./tsconfig.json",
    "watch": "tsc -w -p ./tsconfig.json",
    "package": "vsce package"
  },
  "devDependencies": {
    "@types/node": "^24.10.1",
    "@types/vscode": "^1.90.0",
    "typescript": "^5.4.0",
    "vsce": "^2.15.0"
  }
}
